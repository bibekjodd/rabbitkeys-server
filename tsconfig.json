{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "./dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
