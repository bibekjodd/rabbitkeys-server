{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "./dist",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,

    "module": "CommonJS",
    "lib": ["ES2022"],

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
